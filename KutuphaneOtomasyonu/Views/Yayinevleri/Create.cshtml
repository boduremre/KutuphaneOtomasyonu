@model KutuphaneOtomasyonu.Models.Yayinevi

@{
    ViewData["Title"] = "Yayınevi Ekle";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">Yayınevi Ekle</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Adi" class="control-label"></label>
                            <input asp-for="Adi" class="form-control" />
                            <span asp-validation-for="Adi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Ekle" class="btn btn-info" />
                            <a asp-action="Index" class="btn btn-danger">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
