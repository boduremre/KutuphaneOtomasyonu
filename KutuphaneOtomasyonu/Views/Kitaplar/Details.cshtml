@model KutuphaneOtomasyonu.Models.Kitap

@{
    ViewData["Title"] = "Kitap Detay";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">Kitap Detay</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.YerBilgisi)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.YerBilgisi)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Ad)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Ad)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.OzgunAd)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.OzgunAd)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SayfaSayisi)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SayfaSayisi)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Adet)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Adet)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BaskiYili)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BaskiYili)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Dil)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Dil)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Barkod)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Barkod)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ISBN)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ISBN)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Ceviren)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Ceviren)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TeminBicimi)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TeminBicimi)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.EdinmeBedeli)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.EdinmeBedeli)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Yazar)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Yazar.Ad) @Html.DisplayFor(model => model.Yazar.Soyad)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Kategori)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Kategori.KategoriAdi)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Yayinevi)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Yayinevi.Adi)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.KapakResmi" alt="@Model.Ad" style="width: 175px; height:auto;" />
                    </div>
                </div>
                <div class="panel-footer">
                    <a asp-action="Edit" asp-route-id="@Model.KitapId" class="btn btn-info btn-sm">Düzenle</a>
                    <a asp-action="Index" class="btn btn-danger btn-sm">İptal</a>
                </div>
            </div>
        </div>
    </div>
</div>
