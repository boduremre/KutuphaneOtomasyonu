@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model KutuphaneOtomasyonu.Models.AppUser

@{
    ViewData["Title"] = @Localizer["UyeDuzenle"];
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">@Localizer["KitapDuzenle"]</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TCKimlik" class="control-label">@Localizer["TC"]</label>
                            <input asp-for="TCKimlik" class="form-control" />
                            <span asp-validation-for="TCKimlik" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Adi" class="control-label">@Localizer["Ad"]</label>
                            <input asp-for="Adi" class="form-control" />
                            <span asp-validation-for="Adi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Soyadi" class="control-label">@Localizer["Soyad"]</label>
                            <input asp-for="Soyadi" class="form-control" />
                            <span asp-validation-for="Soyadi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cinsiyet" class="control-label">@Localizer["Cinsiyet"]</label>
                            <select asp-for="Cinsiyet" class="form-control">
                                @if (Model.Cinsiyet)
                                {
                                <option value="true" selected>@Localizer["Erkek"]</option>
                                <option value="false">@Localizer["Kadin"]</option>
                                }
                                else
                                {
                            <option value="true">@Localizer["Erkek"]</option>
                            <option value="false" selected>@Localizer["Kadin"]</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DogumTarihi" class="control-label">@Localizer["DogumTarihi"]</label>
                            <input asp-for="DogumTarihi" class="form-control" />
                            <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label">@Localizer["KullaniciAdi"]ı</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group @if (Model.EmailConfirmed) { Write("has-success"); } else { Write("has-error"); } has-feedback">
                            <label asp-for="Email" class="control-label">@Localizer["Email"]</label>
                            <input asp-for="Email" class="form-control" />
                            @if (Model.EmailConfirmed)
                            {
                                <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                            }
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group @if (Model.PhoneNumberConfirmed) { Write("has-success"); } else { Write("has-error"); } has-feedback">
                            <label asp-for="PhoneNumber" class="control-label">@Localizer["Telefon"]</label>
                            <input asp-for="PhoneNumber" class="form-control" data-mask="(999) 999-9999" />
                            @if (Model.PhoneNumberConfirmed)
                            {
                                <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                            }
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Güncelle" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-danger">@Localizer["Iptal"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
