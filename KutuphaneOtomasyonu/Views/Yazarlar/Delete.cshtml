@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model KutuphaneOtomasyonu.Models.Yazar

@{
    ViewData["Title"] = Localizer["YazarSil"];
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">@Localizer["YazarSil"]</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <p>@Localizer["Yazar"] <b>(@Html.DisplayFor(model => model.Ad) @Html.DisplayFor(model => model.Soyad))</b> @Localizer["EminMisiniz"]</p>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="YazarId" />
                        <input type="submit" value="Sil" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-info">@Localizer["Iptal"]</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>