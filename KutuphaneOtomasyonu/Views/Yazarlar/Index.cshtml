@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<KutuphaneOtomasyonu.Models.Yazar>

@{
    ViewData["Title"] = Localizer["Yazarlar"];
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">@Localizer["Yazarlar"]</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <table id="tblYazarlar" class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Soyad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ResimUrl)
                                </th>
                                <th>@Localizer["Islemler"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Soyad)
                                    </td>
                                    <td>
                                        <img class="img-rounded" style="width:32px; height:32px;" alt="@Html.DisplayFor(modelItem => item.Ad) @Html.DisplayFor(modelItem => item.Soyad)" src=" @Html.DisplayFor(modelItem => item.ResimUrl)">

                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.YazarId" class="btn btn-info btn-sm">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.YazarId" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblYazarlar').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.3/i18n/tr.json'
                },
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
}
