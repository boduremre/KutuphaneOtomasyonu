@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model KutuphaneOtomasyonu.Models.Kategori

@{
    ViewData["Title"] = Localizer["KategoriDetay"];
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">@Localizer["KategoriDetay"]</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.KategoriAdi)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.KategoriAdi)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.KategoriId" class="btn btn-info btn-sm">@Localizer["Duzenle"]</a>
                    <a asp-action="Index" class="btn btn-danger btn-sm">@Localizer["Iptal"]</a>
                </div>
            </div>
        </div>
    </div>
</div>
