@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model KutuphaneOtomasyonu.Models.Kategori

@{
    ViewData["Title"] = Localizer["KategoriSil"];
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">@Localizer["KategoriSil"]</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <p>Bu kategoriyi <b>(@Html.DisplayFor(model => model.KategoriAdi))</b>@Localizer["EminMisiniz"] </p>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="KategoriId" />
                        <input type="submit" value="Sil" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-info">@Localizer["Iptal"]</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>