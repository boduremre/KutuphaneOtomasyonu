@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model KutuphaneOtomasyonu.Models.Kategori

@{
    ViewData["Title"] = Localizer["KategoriDuzenle"];
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">@Localizer["KategoriDuzenle"]</div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="KategoriId" />
                        <div class="form-group">
                            <label asp-for="KategoriAdi" class="control-label"></label>
                            <input asp-for="KategoriAdi" class="form-control" />
                            <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-danger">@Localizer["Iptal"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
